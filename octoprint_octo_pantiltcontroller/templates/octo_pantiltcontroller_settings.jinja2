<div>
    <h1>{{ _('Pan settings') }}</h1>
    <div>
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label">{{ _('Initial Pan Value') }}</label>
                <div class="controls">
                    <input type="number" data-bind="value: settings.plugins.octo_pantiltcontroller.pan.initialValue">
                </div>
            </div>
        </form>
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label">{{ _('Min Pan Value') }}</label>
                <div class="controls">
                    <input type="number" data-bind="value: settings.plugins.octo_pantiltcontroller.pan.minValue">
                </div>
            </div>
        </form>
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label">{{ _('Max Pan Value') }}</label>
                <div class="controls">
                    <input type="number" data-bind="value: settings.plugins.octo_pantiltcontroller.pan.maxValue">
                </div>
            </div>
        </form>
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label">{{ _('GPIO Port') }}</label>
                <div class="controls">
                    <input type="number" data-bind="value: settings.plugins.octo_pantiltcontroller.pan.gpio">
					(Requires restart)
                </div>
            </div>
        </form>
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label">{{ _('Invert Pan Buttons') }}</label>
                <div class="controls">
                    <input type="checkbox" data-bind="checked: settings.plugins.octo_pantiltcontroller.pan.invert">
                </div>
            </div>
        </form>
    </div>
</div>

